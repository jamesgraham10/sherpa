{{authCtrl.error}}
form
  div
    label(for="email") Email:
    input(type="email", name="email" ng-model="user.email" ng-keydown="authCtrl.error = ''")
  div
    label(for="password") Password:
    input(type="password", name="password" ng-model="user.password" ng-keydown="authCtrl.error = ''")
  div.button-group(role="group")
    button(ng-click="authCtrl.login(user)").btn.btn-primary-outline Login
    button(ng-click="authCtrl.register(user)").btn.btn-success-outline Sign Up
